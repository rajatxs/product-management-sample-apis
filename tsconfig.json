{
   "compilerOptions": {
      "allowJs": false,
      "checkJs": false,
      "target": "ES6",
      "moduleResolution": "node",
      "module": "CommonJS",
      "outDir": "lib",
      "esModuleInterop": true,
      "baseUrl": ".",
      "paths": {
         "*": ["node_modules/*", "src/types/*"]
      }
   },
   "include": ["src/**/*"],
   "exclude": ["node_modules/**/*", "tests/**/*"]
}
